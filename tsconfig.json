{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "awesomeTypescriptLoaderOptions": {
    "forceIsolatedModules": true,
    "useBabel": true,
    "useCache": true,
    "useTranspileModule": true,
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
